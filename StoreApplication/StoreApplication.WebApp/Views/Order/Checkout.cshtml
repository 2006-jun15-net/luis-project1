@model Order

    <form asp-action="Checkout" method="Post" class="form" role="form">
        <h4>You're one step away from comepleting your order</h4>

        <div asp-validation-summary="All" class="alert"></div>

        <div class="form-group">
            <label asp-for="FirstName" ></label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="alert"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName" ></label>
            <div class="col-md-5">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="alert"></span>

            </div>
        </div>

        <div class="form-group">
            <label asp-for="Address" ></label>
            <div class="col-md-5">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="alert"></span>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="City" ></label>
            <div class="col-md-5">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="alert"></span>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="State" ></label>
            <div class="col-md-5">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="alert"></span>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Zipcode" ></label>
            <div class="col-md-5">
                <input asp-for="Zipcode" class="form-control" />
                <span asp-validation-for="Zipcode" class="alert"></span>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" ></label>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="alert"></span>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5 offset-2">
                <input type="submit" class="btn btn-primary" value="Complete Order" />
            </div>
        </div>

    </form>