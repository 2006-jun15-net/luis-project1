@model Product

<div class="col-sm-4 col-lg-4 col-md-4 product-list-item">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for product" />
        <div class="caption">
            <div class="price">
                <h5 class="float-right">@Model.Price.ToString("c")</h5>
            </div>
            <div class="addToCart">
                <div class="button align-self-baseline">
                    <a class="btn btn-primary"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-productId="@Model.ProductId">
                        Add to Cart
                    </a>
                </div>
            </div>
            <div class="product-name">
                <h4>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.Name</a>
                </h4>
            </div>
            <div class="product-description">
                <p>@Model.Description</p>
            </div>
            
        </div>
       
    </div>


</div>
